<div class="container my-5">
    <div class="row 1">
        <div class="col-md-4">
          <h2 class="title"><strong>新着投稿</strong></h2>
        </div>
        <div class="col-md-4">
           <i class="fa-regular fa-magnifying-glass-arrow-right"></i>
        </div>
    </div>
    <div class="row 2">
        <% @posts.each do |post| %><!-- 赤字になる -->
          <%= link_to post_path(post.id) do %><!-- 赤字になる -->
          <%= image_tag post.user.get_image(100,100), class: "card-img-top"; %><!-- サイズ指定 -->
          <% end %>
          <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle";%>
        <% end %>
    </div>
</div>
<%= paginate @posts %><!-- 場所を考える -->
