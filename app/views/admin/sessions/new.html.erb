<!-- レイアウト-->
<h2>ログイン</h2>

<%= form_with model: @admin, url: session_path do |f| %> <!-- URLの変更 -->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %> <!-- ここは実装するかを検討 -->
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %> 
    </div>
  <% end %> <!-- （検討する）ここまで -->

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admin/shared/links" %> <!-- ここは記入しておく？ -->
