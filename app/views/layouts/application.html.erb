<!DOCTYPE html>
<html>
  <head>
    <title class="text-success">和菓子検索コミュニティサイト</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/5c442e0d91.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+1p" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@200&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="d-flex flex-column vh-100">
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-menu mb-6">
          <a class="navbar-brand p-3" href="/">
            <%= link_to root_path, class: "header_logo" do %> <%= image_tag('wagashi01.jpg', class: 'header_logo') %><% end %></a>
          <nav class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <!-- 会員でログインしている時 -->
                <% if user_signed_in? %>
                  <li class="nav-list-item"><%= link_to "季節の和菓子を見てみる", sweets_path %></li>
                  <li class="nav-list-item"><%= link_to "投稿一覧", root_path %></li>
                  <li class="nav-list-item"><%= link_to "マイページ", user_path(current_user) %></li>
                  <li class="nav-list-item"><%= link_to "ログアウト",  destroy_user_session_path, method: :get %></li>
                   <span class="u h7 text-white strong">
                    ようこそ、<%= current_user.name %>さん！
                   </span>
                <!-- 管理者でログインしている時 -->
                <% elsif admin_signed_in?%>
                  <li class="nav-list-item"><%= link_to "投稿一覧", admin_root_path %></li>
                  <li class="nav-list-item"><%= link_to "ユーザー一覧", admin_users_path %></li>
                  <li class="nav-list-item"><%= link_to "季節ごとの和菓子一覧", admin_sweets_path %></li>
                  <li class="nav-list-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :get %></li>
                <!-- ログインしていない時 -->
                <% else %>
                  <li class="nav-list-item"><%= link_to "管理者ログイン", admin_session_path, method: :get %></li>
                  <li class="nav-list-item"><%= link_to "ゲストログイン(閲覧用)",users_guest_sign_in_path, method: :post %></li>
                  <li class="nav-list-item"><%= link_to "新規登録", new_user_registration_path %></li>
                  <li class="nav-list-item"><%= link_to "ログイン", new_user_session_path %></li>
                <% end %>
              </ul>
             </div>
            </div>
           </nav>
        </header>
	
        <main class="mb-auto">
          <%= yield %>
        </main>
      
        <footer>
      <div class="container">
          <div class="footer-text">
            <p>©Wagashi.inc</p>
          <div class="icon">
             <ul>
                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                <li><a href="#"><i class="fa fa-pinterest"></i></i></a></li>
              </ul>
          </div>
          </div>
      </div>
      </footer>
  </body>
</html>