<div class="container my-5">
    <div class="col-xs-10 col-xs-offset-1">
        <div class="row">    
            <%= form_with model: @post do |f|%>
            
            <div class="col-xs-5">
              <h2>投稿編集</h2>
              
              <div class="item-new-form">
                 <%= f.file_field :image, accept: "image/*" %> <!-- file_fieldとは、ファイルの投稿をするためのフィールドであり、画像ファイル以外に音声ファイルや動画ファイルも投稿できてしまうので、'accept: "image/*"を使い、画像ファイルしか投稿できなくする。-->
              </div>
         </div>
         <br><br><br>
            <div class="col-xs-5 col-xs-offset-2">
            <table class="new-form-table">
               <tbody>
                   <tr>
                       <th>タイトル</th>
                       <td><%= f.text_field :title, class: "form-control" %></td>
                   </tr>
                   
                   <tr>
                       <th>本文</th>
                       <td><%= f.text_area :content, class: "form-control" %></td>
                   </tr>
                   
                   <!--tr>
                       <th>ジャンル</th>
                       <td><#%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
                   </tr-->
                </tbody>
            </table>
              <div class="text-center">
                <%= f.submit "変更を保存", class: "btn btn-primary text-right" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
</div>