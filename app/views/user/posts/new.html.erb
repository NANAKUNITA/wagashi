<div class="container my-5">
    <div class="post-title">
        <h2>新規投稿フォーム</h2>
        <br><br>
        <div class="post-item">
            <div>
                <dl>
                   <%= form_with model: @post do |f| %>
                   <%= f.file_field :image, accept: "image/*" %>
                   <br><br>
                    <dd>
                        <%= f.text_field :title, class:"form-control", placeholder: "タイトル" %>
                    </dd>
                   
                    <dd>
                        <%= f.text_area :content, class:"form-control", placeholder: "本文" %>
                    </dd>
                    <dd>
                      <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
                      <%= f.text_field :name,value: @tag_list,class:"form-control"%>
                    </dd>
                    <dd>
                    <div class="col-sm-2 mt-auto ml-5">
                    <%= f.submit :新規登録, class: "btn btn-primary" %>
                    </div>
                    <!-- ここは、hrefじゃなくて、submitじゃないと保存されない。-->
                    </dd>
                </dl>
            </div>
            <br><br>
            <% end %>
        </div>
    </div>
</div>