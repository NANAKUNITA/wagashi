<div class="container">
    <div class="row 1">
        <h5 class="text-dark bg-light p-4 mb-0">画像投稿フォーム</h5>
        <!--div class="form-body p-4"-->
            <!--% if @post.errors.any? %>
            <ul class="alert alert-danger" role="alert">
                <h6 class="alert-heading">
                    <#%= @post.errors.count %>件のエラーが発生しました
                </h6>
                <#% @post.errors.full_messages.each do |message| %>
                <li><#%= message %></li>
                <#% end %>
            </ul>
            <#% end %>
            <%= form_with model: @post do |f| %>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
            <div class="row 2">
                <%= f.text_field :title, class:"form-control", placeholder: "タイトル" %>
            </div>
            <div class="row 3">
                <%= f.text_area :content, class:"form-control", placeholder: "本文" %>
            </div>
            <!--div class="row 4">
                カテゴリーを選択
            </div-->
            <div class="row 5">
                <button class="button-60" role="button">投稿する</button>
            </div>
            <% end %>
        <!--/div-->
    </div>
</div>