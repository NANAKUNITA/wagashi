<!-- レイアウト -->
<h2>新規会員登録</h2>

<%= form_with model: @user, url: new_user_registration_path do |f| %> <!-- URLの変更 -->
  <!--%= render "user/shared/error_messages", resource: resource %-->
<%= devise_error_messages! %>
  <div class="row">
    <label class="col-lg-3">ユーザー名</label>
    <div class="col-lg-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %>
    </div>
  </div><br>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
  
  <h3>既に登録済みの方</h3>
  <div class="col-lg-3">
    <%- if controller_name != 'sessions' %>
    <%= link_to "こちら", new_user_session_path %><strong>から新規登録を行なってください。</strong><!-- pathを変更するかも -->
    <% end %>
  </div>
<% end %>

