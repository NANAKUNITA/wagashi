<div class="container my-5">
  <% @sweets.group_by(&:month).each do |month, sweets| %>
    <div class="row">
      <div class="row">
        <div class="sweet-index">
          <h2><%= month %>æœˆ</h2>
        </div>
      </div>
        <br><br>
      <% sweets.each do |sweet| %>
      <div class="col-md-6">
          <div>
            <dl>
                <dt>
                  <%= link_to sweet_path(sweet) do %>
                  <%= image_tag sweet.get_image, class: "sweet-img" %>
                  <% end %>
                </dt>
                <br><br>
              <dd><%= sweet.name %></dd>
            </dl>
          </div>
        </div>
        <br><br>
      <% end %>
    </div>
  <% end %>
</div>
