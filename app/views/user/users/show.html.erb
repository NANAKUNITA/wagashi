<div class="container my-5">
    <div class="user-title">
        <h2>マイページ</h2>
        <div class="user-item">
            <div>
                <dl>
                    <dt>
                        <%= @user.name %>
                        <%= image_tag @user.get_profile_image %>
                    </dt>
                       <div class="row">
                        <p>ブックマーク一覧</p>
                        <% if @favorite_list.present? %>
                        <% @favorite_list.each do |post| %>
                        <%= post.title %>
                        <%= image_tag post.get_image %>
                        <% end %>
                        <% end %>
                        </div>
                </dl>
            </div>
        </div>
    </div>
</div>