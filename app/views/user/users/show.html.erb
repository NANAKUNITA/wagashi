                <div class="row 2">
                    <td>メールアドレス</td><!-- tdは必要か？ -->
                    <td><%= @user.email %></td>
                </div><br><br>
                
                <div class="row 3">
                    <% if @user.id == current_user.id %>
                    <p><%= link_to "プロフィールを編集", edit_user_path(@user) %></p>
                    <% end %>
                </div>
                
                <!--div class="row 4">
                    ブックマーク一覧
                </div-->
