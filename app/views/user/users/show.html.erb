                   <h2>マイページ</h2>
                </div>
                <div class="profile-row"><!-- containerかrow -->
                   <td>ユーザーネーム</td>
                   <td><%= @user.name %></td>
                   <%= image_tag @user.get_profile_image(300,300)%>
                   <!--% if @user.id == current_user.id %>
                   <p><#%= link_to "プロフィール編集", edit_user_path(@user) %></p>
                   <#% end %-->
